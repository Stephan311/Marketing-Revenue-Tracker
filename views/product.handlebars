<div class="row">
    <form id="product-form" class="col s12">
      <div class="row">
        <div class="input-field col s12">
          <input id="product_id" type="hidden" value="{{product.id}}" class="validate">
          <label for="product_name">Product Name</label>
          <textarea placeholder="Placeholder" id="product_name" cols="80" class="validate">{{product.product_name}}</textarea>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <label for="price">Price</label>
          <input placeholder="Placeholder" id="price" type="text" value="{{product.price}}" class="validate">
          
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <label for="stock">Stock</label>
          <input id="stock" type="text" value="{{product.stock}}" class="validate">
        </div>
      </div>
    <div class="row">
      <div class="file-field input-field col s12">
          <button type="submit" id="cust_btn" class ="btn waves-effect waves-light">Submit</button>
          {{#if product.id}}
          <button id="cust_delete" class ="btn waves-effect waves-light" style="float:right;">Delete</button>
          {{/if}}
      </div>
    </div>
      
    </form>
  </div>
  <script src="/js/product.js"></script>