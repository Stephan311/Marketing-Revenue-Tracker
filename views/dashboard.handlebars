{{#if loggedIn}}
{{#if isOwner }}
<a href="/add">Add a new product</a>
{{/if}}
{{/if}}
<main>
    <div class="featureditems"> <!--style="overflow-y:scroll"-->
        {{#each profits as |profits|}}
        <div style="float: left; width: 33%;">
            <div height="100px" class="card row">
                <div class="card-content" style="width:100%">
                    <div class="card-title activator grey-text text-darken-4">{{profits.product_id}}</div>
                    <div class="right-align" style="valign:top;" >
                        <span class="card-title grey-text text-darken-4 right-align">Stock : {{profits.date}}</span>
                        <p>Profit : ${{profits.profit}}</p>
                    </div>
                    <div class="right-align" style="float: inline-end;">
                    <input type="button" value="Add to Cart" onClick="AddToCart(event,'{{profits.id}}');">
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</main>
<script src="/js/cart.js"></script>